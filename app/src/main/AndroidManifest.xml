<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.audiapp">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Audiapp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_icono"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_icono_round"
        android:supportsRtl="true"
        android:theme="@style/AudiappTheme">
        <activity
            android:name=".placeholderfun.PlaceholderActivity"
            android:label="@string/title_activity_placeholder" />
        <activity android:name=".inicial.RegistroActivity" />
        <activity android:name=".inicial.LoginActivity" />
        <activity android:name=".inicial.ElegirInicioActivity" />
        <activity
            android:name=".inicial.InicialActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AudiappTheme.OpeningTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>